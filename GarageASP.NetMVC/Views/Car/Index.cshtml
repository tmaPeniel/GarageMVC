@model List<Car>

<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Dashboard Voiture</h1>
            <p class="lead text-body-secondary">Application de gestion de voiture et clients pour garagiste.</p>
            <p>
                <a asp-controller="Car" asp-action="AddCar" class="btn btn-primary my-2">Ajouter une nouvelle voiture</a>
            </p>
        </div>
    </div>
</section>


<div class=" container">
    <h2 class="fw-light py-4 text-center">Voitures reçues</h2>
</div>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            
            <th scope="col">Immatriculation</th>
            <th scope="col">Client</th>
            <th scope="col">Marque</th>
            <th scope="col">Modele</th>
            <th scope="col">Etat</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
               
                <th scope="row">@item.Immatriculation</th>
                <td>@item.Client.Name @item.Client.Surname</td>
                <td>@item.Marque</td>
                <td>@item.Modele</td>
                <td>
                    @if (item.Etat == "Pris en charge")
                    {
                        <button class="btn btn-primary">Pris en charge</button>
                    }
                    else if (item.Etat == "En cours")
                    {
                        <button class="btn btn-warning">En cours</button>
                    }
                    else if (item.Etat == "Terminé")
                    {
                        <button class="btn btn-success">Terminé</button>
                    }
                </td>
                <td>
                    <a type="btn btn-success" asp-controller="Car" asp-action="DetailCar" asp-route-id="@item.Immatriculation" class="btn btn-sm btn-outline-secondary">View</a>
                    <a type="btn btn-success" asp-controller="Car" asp-action="EditCar" asp-route-id="@item.Immatriculation" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <a type="btn btn-success" asp-controller="Car" asp-action="DeleteCar" asp-route-id="@item.Immatriculation" class="btn btn-sm btn-danger ">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>