@model Car

<div class="col-md-6 mb-2">
    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <div class="col p-4 d-flex flex-column position-static">
            <strong class="d-inline-block mb-2 text-primary-emphasis">@Model.Marque @Model.Modele</strong>
            <h2 class="mb-0"> @Model.Client.Name @Model.Client.Surname </h2>
            <h4 class="mb-0">@Model.Immatriculation </h4> 
            <p class="card-text mb-auto">Mail du client : @Model.Client.Mail</p>
            <p class="card-text mb-auto">@Model.Etat</p>
            
        </div>
    </div>
    <div class="col-12">
        <a asp-controller="Car" asp-action="Index" class="btn btn-secondary float-right mt-3">Retour</a>
    </div>
</div>
