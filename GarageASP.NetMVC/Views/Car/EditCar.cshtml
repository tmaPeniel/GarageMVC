@using GarageASP.NetMVC.ViewModels
@using GarageASP.NetMVC.Models
@model EditCarModel

<h2>Modifier l'état de la @Model.Marque @Model.Modele</h2>

<form form method="post" asp-action="EditCar" class="row g-3">
    <div class="col-md-4">
        <label asp-for="Marque" class="form-label">Marque</label>
        <input asp-for="Marque" class="form-control" readonly>
        <span asp-validation-for="Marque" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Modele" class="form-label">Modele</label>
        <input asp-for="Modele" class="form-control" readonly>
        <span asp-validation-for="Modele" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Immatriculation" class="form-label">Immatriculation</label>
        <input asp-for="Immatriculation" class="form-control" readonly>
        <span asp-validation-for="Immatriculation" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="Etat" class="form-label">Etat</label>
        <select asp-for="Etat" class="form-select">
            <option selected disabled value="">Choisir...</option>
            <option>Pris en charge</option>
            <option>En cours</option>
            <option>Terminé</option>
        </select>
        <span asp-validation-for="Etat" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="ClientID" class="form-label">Client</label>
        <select asp-for="ClientID" class="form-select">
            <option selected disabled value="">Choisir...</option>
            @foreach (Client item in ViewBag.Client)
            {
                <option value="@item.Id">@item.Name @item.Surname</option>
            }
        </select>
        <span asp-validation-for="ClientID" class="text-danger"></span>
    </div>
   

    <div class="col-12">
        <button class="btn btn-primary float-right mt-3" type="submit">Valider</button>
        <a asp-controller="Car" asp-action="Index" class="btn btn-secondary float-right mt-3">Retour</a>
    </div>
</form>