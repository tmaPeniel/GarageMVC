@model List<Client>

<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Dashboard client</h1>
            <p class="lead text-body-secondary">Application de gestion de voiture et client pour garagiste.</p>
            <p>
                <a asp-controller="Client" asp-action="Add" class="btn btn-primary my-2">Ajouter un nouveau client</a>
            </p>
        </div>
    </div>
</section>


<div class=" container">
    <h2 class="fw-light py-4 text-center">Liste de client</h2>
</div>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nom</th>
            <th scope="col">Prenom</th>
            <th scope="col">Mail</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <th scope="row">@item.Id</th>
                <td>@item.Name </td>
                <td>@item.Surname</td>
                <td>@item.Mail</td>
               
                <td>
                    <a type="btn btn-success" asp-controller="Client" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View</a>
                    <a type="btn btn-success" asp-controller="Client" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <a type="btn btn-success" asp-controller="Client" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>